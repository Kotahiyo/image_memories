<div class="posts_list__field">
  <span>投稿一覧</span>
  <div class="user-field">
  <% if user_signed_in? %>
    ログインしているユーザー：<%= current_user.name %>
    <%= link_to  "ログアウト", destroy_user_session_path,  method: :delete %>

  <% else %>
  <div class="sign_out_user-field">
    <span>ログインもしくは新規登録をお願いします</span>
    <%= link_to  "ログイン", new_user_session_path %>
    <%= link_to  "新規登録", new_user_registration_path %>
  </div>
  <% end %>

  </div>

  <div class="post-btn">
    <%= link_to  "投稿する", new_post_path %>
  </div>

  <ul>
    <% @posts.each do |post|%>
      <%= link_to(post_path(post)) do %>
        <li>
          投稿者: <%= post.user.name %> </br>
          タイトル: <%= post.title %> </br>
          投稿日時： <%= post.created_at.strftime("%Y-%m-%d %H:%M") %> </br>
        </li>
        <ul class="post__admin_actions">
        <% if user_signed_in? && current_user.id == post.user_id %>
          <li><%= link_to  "編集", edit_post_path(post) %></li>
          <li><%= link_to  "削除", post_path(post), method: :delete %></li>
        <% end %>
        </ul>
      <% end %>
    <% end %>
  </ul>

</div>
