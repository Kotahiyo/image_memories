<div class="posts_list__field">
  <span>投稿一覧</span>
  <ul>
    <% @posts.each do |post|%>
      <%= link_to(post_path(:post_id)) do %>
        <li>
          Title: <%= post.title %> </br>
          Created_at： <%= post.created_at.strftime("%Y-%m-%d %H:%M") %> </br>
        </li>
        <ul class="post__admin_actions">
          <li><%= link_to  "編集", edit_post_path(post) %></li>
          <li><%= link_to  "削除", post_path(post), method: :delete %></li>
        </ul>
      <% end %>
    <% end %>
  </ul>

</div>
