<div class="session_form">
  <div class="new_session_form">
    <h2 class="title">ログイン画面</h2>

    <div class="form-area">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <span class="alert"><%= flash[:alert] %></span>
        <div class="field">
          <%= f.label :email, class: "field_title"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_field" %>
        </div>

        <div class="field">
          <%= f.label :パスワード, class: "field_title" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "input_field"%>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "actions_btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
