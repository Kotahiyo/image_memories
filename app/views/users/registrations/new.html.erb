<div class="session_form">
  <div class="new_session_form">
    <h2 class="title">新規登録画面</h2>

    <div class="form-area">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "field_title"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input_field" %>
        </div>


        <div class="field">
          <%= f.label :name, class: "field_title" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input_field" %>
        </div>


        <div class="field">
          <%= f.label :パスワード, class: "field_title" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上入力してください)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "input_field" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（再入力）, class: "field_title" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input_field" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "actions_btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
